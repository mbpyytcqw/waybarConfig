{
  "layer": "bottom",
  "position": "bottom",
  "height": 28,
  "spacing": 5,

  "modules-left": ["hyprland/workspaces", "backlight"],
  "modules-center": ["clock"],
  "modules-right": ["hyprland/language",  "memory", "battery"],

  "hyprland/workspaces": {
    "format": "<span size='large'>{icon} </span>",
    "format-icons": {
      "active": "\uea71",
      "default": "\ueabc"
    },
    "icon-size": 14,
    "sort-by-number": true,
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    }
  },

  "clock": {
    "format": "{:%d.%m.%Y %H:%M}",
    "tooltip": false,
    "tooltip-format": ""
  },

  "battery": {
    "bat": "BAT1",
    "format": "batt {capacity}%",
    "tooltip": false
  },

  "backlight": {
    "format": "   brg {percent}%",
    "tooltip": false
  },

  "memory": {
    "interval": 30,
    "format": "mem {used:0.1f}G   ",
    "tooltip": false
  },

  "temperature": {
    "format": "temp {temperatureC}Â°C  ",
    "tooltip": false
  },

  "hyprland/language": {
    "format": "{short}",
    "tooltip": false
  }
}
